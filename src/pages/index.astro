  <body>
    <!-- Header -->
    <header class="site-header">
      <h1 class="logo">EMILIO ACEVEDO</h1>
      <nav>
        <a href="/about">About Me</a>
        <a href="/contact">Contact</a>
      </nav>
    </header>

    <!-- Question Intro -->
    <section class="question-screen">
      <h2 id="typed-question"></h2>
      <div class="options">
        <button data-type="grad">Grad Photos</button>
        <button data-type="car">Cars</button>
        <button data-type="nature">Nature</button>
		<button data-type="framed">Framed Photos</button>
        <button data-type="all">All</button>
      </div>
    </section>

    <!-- Gallery Area -->
    <main id="gallery" class="home-gallery hidden"></main>

	<script is:inline>


		// Typed effect
		const questionText = "What type of photos are you interested in?";
		const questionEl = document.getElementById("typed-question");
		let i = 0;
		function typeWriter() {
		  if (i < questionText.length) {
			questionEl.textContent += questionText.charAt(i);
			i++;
			setTimeout(typeWriter, 50);
		  }
		}
		typeWriter();


	  
		// Gallery data (use your new arrays)
