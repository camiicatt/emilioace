	"/framed/F5.png",
	"/framed/F6.png",
	"/framed/F7.png",
	"/framed/F8.png",
]

	  
		const galleries = {
		  grad: gradImages,
		  car: carImages,
		  nature: natureImages,
		  framed: framedImages,
		  all: [...gradImages, ...carImages, ...natureImages]
		};
	  
		// Handle clicks
		const buttons = document.querySelectorAll(".options button");
		const galleryEl = document.getElementById("gallery");
		const questionScreen = document.querySelector(".question-screen");
		const optionsContainer = document.querySelector(".options");
	  
		function loadGallery(type) {
			// Fade out existing content if present
			if (galleryEl.innerHTML.trim() !== "") {
				galleryEl.classList.add("fade-out");

				// Wait for fade-out to finish before changing content
				setTimeout(() => {
				galleryEl.classList.remove("fade-out");
				renderGallery(type);
				}, 500); // match fadeOut duration
			} else {
				renderGallery(type);
			}
			}

			function renderGallery(type) {
			const imgs = galleries[type];

			if (type === "car") {
				const rowContent = imgs.map(src => `<img src="${src}" alt="car">`).join("");
				const doubled = rowContent + rowContent;
				galleryEl.innerHTML = `
				<div class="car-gallery">
					<div class="car-row scroll-left">${doubled}</div>
					<div class="car-row scroll-right">${doubled}</div>
				</div>
				`;
			} else {
				galleryEl.innerHTML = imgs.map((src, i) =>
				`<div class="gallery-item"><img src="${src}" alt="photo" class="fade-in" style="animation-delay:${i * 0.03}s"></div>`
				).join("");
			}

			galleryEl.classList.remove("hidden");
			galleryEl.classList.add("visible");
			}



	  
		buttons.forEach(btn => {
		  btn.addEventListener("click", () => {
			const type = btn.getAttribute("data-type");
			loadGallery(type);
	  
			// first time click: remove question, move options to top
			if (!optionsContainer.classList.contains("sticky")) {
			  questionScreen.style.display = "none";
			  optionsContainer.classList.add("sticky");
			  document.body.insertBefore(optionsContainer, galleryEl);
			}
		  });
		});
	  </script>
	  
	  
	  
  </body>
</html>
