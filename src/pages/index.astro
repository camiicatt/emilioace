---
const gradImages = [
  "/guy1.png",
  "/girl2.png",
  "/guy3.png",
  "/guy4.png",
  "/emilio.png",
];

const carImages = [
  "/car1.jpg",
  "/car2.jpg",
  "/car3.jpg",
];

const natureImages = [
  "/nature1.jpg",
  "/nature2.jpg",
  "/nature3.jpg",
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Emilio Acevedo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <!-- Header -->
    <header class="site-header">
      <h1 class="logo">EMILIO ACEVEDO</h1>
      <nav>
        <a href="/about">About Me</a>
        <a href="/contact">Contact</a>
      </nav>
    </header>

    <!-- Question Intro -->
    <section class="question-screen">
      <h2 id="typed-question"></h2>
      <div class="options">
        <button data-type="grad">Grad Photos</button>
        <button data-type="car">Cars</button>
        <button data-type="nature">Nature</button>
        <button data-type="all">All</button>
      </div>
    </section>

    <!-- Gallery Area -->
    <main id="gallery" class="home-gallery hidden"></main>

	<script is:inline>
		// Typed effect
		const questionText = "What type of photos are you interested in?";
		const questionEl = document.getElementById("typed-question");
		let i = 0;
		function typeWriter() {
		  if (i < questionText.length) {
			questionEl.textContent += questionText.charAt(i);
			i++;
			setTimeout(typeWriter, 50);
		  }
		}
		typeWriter();
	  
		// Gallery data
		const galleries = {
		  grad: ["/guy1.png","/girl2.png","/guy3.png","/guy4.png","/emilio.png"],
		  car: ["/car1.jpg","/car2.jpg","/car3.jpg"],
		  nature: ["/nature1.jpg","/nature2.jpg","/nature3.jpg"],
		  all: ["/guy1.png","/girl2.png","/guy3.png","/guy4.png","/emilio.png","/car1.jpg","/car2.jpg","/car3.jpg","/nature1.jpg","/nature2.jpg","/nature3.jpg"]
		};
	  
		// Handle clicks
		const buttons = document.querySelectorAll(".options button");
		const galleryEl = document.getElementById("gallery");
		const questionScreen = document.querySelector(".question-screen");
	  
		buttons.forEach(btn => {
		  btn.addEventListener("click", () => {
			const type = btn.getAttribute("data-type");
			const imgs = galleries[type];
	  
			// build gallery
			galleryEl.innerHTML = imgs.map(src => 
			  `<div class="gallery-item"><img src="${src}" alt="photo"></div>`
			).join("");
	  
			// hide question, show gallery
			questionScreen.style.display = "none";
			galleryEl.classList.remove("hidden");
			
			// trigger fade-in
			requestAnimationFrame(() => {
			  galleryEl.classList.add("visible");
			});
		  });
		});
	  </script>
	  
  </body>
</html>
